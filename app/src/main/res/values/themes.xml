<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Theme with No Action Bar -->
    <style name="Theme.GadgetCart.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#61C8F5</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Theme with Action Bar -->
    <style name="Theme.GadgetCart.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">#61C8F5</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

</resources>
