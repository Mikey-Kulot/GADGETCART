<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state: Password hidden, show closed eye -->
    <item android:drawable="@drawable/visible" />

    <!-- When password is visible (selected), show open eye -->
    <item android:state_selected="true" android:drawable="@drawable/visibility" />
</selector>
